        <!-- Content Section -->
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="section-heading">Welcome to the Scrapington Post </h1>
                    </div>
                </div>
            </div>
        </section>

        <!-- Content Section -->
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <table class="table table-hover">
                            <thead>
                              <tr>
                                <th><h2>Articles</h2></th>
                              </tr>
                            </thead>
                            <!--Where the results will be pushed by handlebars-->
                            <tbody>
                                {{#each result}}
                                    <tr>
                                        <td>
                                            <h4><strong>{{this.title}}</strong></h4>
                                            <a href="{{this.link}}" target="_blank">{{this.link}}</a><br>
                                            <form class="formArea" action="/articles/{{this.id}}" method="post">
                                                <h4>Comments:</h4>
                                                <textarea name="comment" id="comment"></textarea>

                                                
                                                <button type="submit" class="btn btn-primary commentBtn">Add Comment</button>
                                            </form>
                                        </td>                                                                  
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container -->
        </section>
